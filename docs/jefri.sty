\newcommand{\ilcode}{\tt}
\newcommand{\callable}[3]{
	\noindent
	\begin{tabular}{ | l | p{5in} | }
	\hline
	\multicolumn{2}{|l|}{#1} \\
	\hline
	\multicolumn{2}{|p{6in}|}{#2} \\
	\hline
	\hline
	{\textbf Parameters:} & {} \\
	#3
	\end{tabular}
	\\
	\\
}
\newcommand{\callTitle}[2]{\large \ilcode #1 ({\it #2})}
\newcommand{\method}[5]{
	\callable{\callTitle{#1}{#2}: {\it #3}}{#4}{#5}
}
\newcommand{\param}[2]{
	{\ilcode #1} & #2 \\
	\hline
}
\newcommand{\returns}[1]{
	\hline
	{\textbf Returns:} & {} \\
	{} & #1 \\
	\hline
}
\newcommand{\event}[4]{\callable{\callTitle{#1}{#2}}{#3}{#4}}

\renewcommand{\glossary}[2]{\noindent {\large \textbf #1} #2 \\ }

\newcommand\jefri[1]{
	\title{
